{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://contextbuilder.dev/schemas/llms-meta.schema.json",
  "title": "LlmsMeta",
  "description": "Generation metadata for llms.txt / llms-full.txt artifacts.",
  "type": "object",
  "required": ["source_url", "generated_at", "page_count"],
  "properties": {
    "source_url": {
      "type": "string",
      "format": "uri",
      "description": "Original documentation URL."
    },
    "kb_id": {
      "type": "string",
      "format": "uuid",
      "description": "KB identifier."
    },
    "generated_at": {
      "type": "string",
      "format": "date-time",
      "description": "ISO-8601 timestamp of artifact generation."
    },
    "page_count": {
      "type": "integer",
      "minimum": 0,
      "description": "Number of pages contributing to the artifact."
    },
    "model_id": {
      "type": "string",
      "description": "LLM model used for enrichment."
    },
    "token_count": {
      "type": "integer",
      "minimum": 0,
      "description": "Approximate token count of the generated artifact."
    },
    "variant": {
      "type": "string",
      "enum": ["llms.txt", "llms-full.txt"],
      "description": "Which llms.txt variant this metadata describes."
    }
  },
  "additionalProperties": false
}
